/* pages/details/details.wxss */
.main{
  width: 100%;
  padding: 40rpx 30rpx;
  background: #f8f7f4;
  box-sizing: border-box;
}
/* header */
.main .header{
  width: 100%;
}
.main .header .card{
  display: flex;
}
.main .header image{
  width: 200rpx;
  border-radius: 5px;
}
.main .header .information{
  padding-left: 40rpx;
}
.main .header .information text{
  display: inline-block;
}
.main .header .information .title{
  font-size: 40rpx;
  font-weight: bolder;
  display: block;
}
.main .header .information .star{
  margin-top: -20rpx;
}
.main .header .information .classify{
  font-size: 24rpx;
  margin-top: -20rpx;
  color: rgb(146, 145, 145);
}
.main .header .information .operation{
  margin-top: 20rpx;
}
.main .header .information .btn{
  box-shadow: 0px 1px 2px 0px #ccc;
  display: inline-block;
  padding: 10rpx 50rpx;
  margin-right:20rpx;
  border-radius: 5px; 
  font-size: 28rpx;
}

/* intro */
.main .intro{
  width: 100%;
  margin-top: 40rpx;
}
.main .intro text{
  font-weight: bold;
}
.main .intro .content{
  padding-top: 20rpx;
  font-size: 26rpx;
  line-height: 1.8;
  overflow: hidden;
  text-overflow: ellipsis; /* 超出显示为省略号 */
  display: -webkit-box;   /* 将元素作为弹性伸缩盒子模型显示 */
  /* -webkit-line-clamp: 4;  用来限制在一个块元素显示的文本的行数 */
  -webkit-box-orient: vertical;   /* 设置或检索伸缩盒对象的子元素的排列方式 */
}
.main .intro .btn{
  text-align: right;
}
.main .intro .btn text{
  font-weight: normal;
  color: #4ec164;
  font-size: 24rpx;
}
/* constitute */
.constitute{
  margin-top: 60rpx;
}
.constitute text{
  font-weight: bold;
  /* font-size: 40rpx; */
}
.constitute .content{
  padding-top: 20rpx;
}
.constitute .content .figure{
  white-space: nowrap;
  width: 100%;
  box-sizing: border-box;
}
.constitute .content .figure .box{
  display: inline-block;
  width: 200rpx;
  box-sizing: border-box;
  padding-right: 20rpx;
}
.constitute .content .figure .box image{
  width: 100%;
  border-radius: 5px;
}
.constitute .content .figure .box .name{
  font-size: 32rpx;
}
.constitute .content .figure .box .duty{
  font-size: 20rpx;
  color: rgb(156, 156, 156);
}

/* comment */
.comment{
  width: 100%;
  background: #fff;
  border-radius: 10px;
  margin-top: 40rpx;
}
.comment .short{
  padding: 20rpx;
}
.comment .short .weui-cell{
  padding: 30rpx 0;
}

.comment .short .card{
  width: 100%;
  border-bottom: 1px solid #eee;
  padding: 20rpx 0;
}
.comment .short .card .user_content{
  display: flex;
}
.comment .short .card .user_content image{
  width: 60rpx;
  border-radius: 50%;
}
.comment .short .card .user_content .user{
  /* vertical-align: middle; */
  padding-left: 20rpx;
}
.comment .short .card .user_content .user .user_name{
  font-size: 14px;
  font-weight: bold;
}
.comment .short .card .user_content .user .star{
  margin-top: -10rpx;
}
.comment .short .card .user_content .user .star .time{
  font-size: 10px;
  color: #ccc;
  padding-left: 10rpx;
}
.comment .short .card .content{
  font-size: 14px;
}

/* recommend */
.recommend{
  width: 100%;
  margin-top: 40rpx;
}
.recommend .content{
  padding-top: 20rpx;
}
.recommend .content .recommend_list{
  width: 100%;
  white-space: nowrap;
  box-sizing: border-box;
}
.recommend .content .recommend_list .box{
  display: inline-block;
  box-sizing: border-box;
  padding-right: 30rpx;
}
.recommend .content .recommend_list .box image{
  width: 150rpx;
  border-radius: 5px;
}
.recommend .content .recommend_list .box .title{
  width: 150rpx;
  font-size: 14px;
  font-weight: bold;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
