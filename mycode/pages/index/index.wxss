/**index.wxss**/
/* 顶部搜索栏 */
.weui-search-bar{
  background: #4ec164;
}
.weui-search-bar__cancel-btn{
  color: white;
}
/* 内容栏目 */
.home_body{
  box-sizing: border-box;
  padding: 8px;
}
.home_body .row{
  margin-bottom: 20rpx;
}
.home_body .row .text{
  font-size: 28rpx;
  font-weight: bold;
  height: 60rpx;
  line-height: 60rpx;
  margin-bottom: 20rpx;
}
.content{
}
.content .content_cinema{
  width: 100%;
  white-space: nowrap;
  box-sizing: border-box;
}
.content .content_cinema .box{
  width: 150rpx;
  margin-right:30rpx;
  box-sizing: border-box;
  display: inline-block;
  position: relative;
}
.box image{
  width: 100%;
  height: 200rpx;
  border-radius: 5px;
} 
.box .title{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  font-weight: bold;
}
.box .star{
  width: 100%;
  position: relative;
  left: 0;
  bottom: 20rpx;
}
