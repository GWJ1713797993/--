/* pages/my/my.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/* 个人中心顶部背景 start */
.my_bg{
  width: 100%;
  height: 400rpx;
  background-image: url("http://gwj1713797993.gz01.bdysite.com/image/背景图片.jpg");
  background-size: 100% 100%;
  display: flex;
  align-items: center;
}
.my_bg button{
  display: inline-block;
  width: 300rpx;
  border-radius:20px;
  box-shadow: 0px 0px 1px 1px #ccc;
  font-size: 32rpx;
  font-weight: normal;
}
/* 个人中心顶部背景 end */
.weui-cell__ft.weui-cell__ft_in-access{
  display:flex;
  align-items: center;
}
.weui-cell__ft.weui-cell__ft_in-access .tip{
  display:inline-block;
  font-size:24rpx;
  color:#ccc;
  padding-right:50rpx;
}
.weui-cell__ft.weui-cell__ft_in-access .start{
  border-radius: 5px;
  font-weight: bolder;
  font-size:12px;
  display:inline-block;
  box-sizing: border-box;
  background: #f2f2f2;
  padding: 5rpx 10rpx;
}