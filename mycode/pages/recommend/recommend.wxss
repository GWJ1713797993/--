/* pages/recommend/recommend.wxss */
.main{
  width: 100%;
}
.main .header{
  width: 100%;
  background: #313139;
}
.main .header image{
  width: 100%;
  display: block;
  height: 400rpx;
}

.list{
  width: 100%;
  background: #ededed;
}
.list .li{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.list .li .box{
  width: 100%;
}
.list .li .box .rank{
  display: inline-flex;
  background: #f6c980;
  border-radius: 5px;
  font-size: 24rpx;
  color: #94621f;
  margin-bottom: 20rpx;
  padding: 10rpx 20rpx;
}
.list .li .box .intro{
  width: 100%;
  padding: 20rpx;
  background: #f8f8f8;
  box-sizing: border-box;
  margin-top: 20rpx;
  border-radius: 5px;
}
.list .li .box .intro text{
  color: #9b9b9b;
  font-size: 24rpx;
}
.list .li .box .card{
  width: 100%;
  display: flex;
}
.list .li .box .card .left{
  flex: 8;
  display: flex;
}
.list .li .box .card .left image{
  width: 150rpx;
  height: 200rpx;
  border-radius: 5px;
  flex: 3;
}
.list .li .box .card .left .information{
  display: inline-block;
  box-sizing: border-box;
  padding: 0 20rpx;
  flex: 7;
}
.list .li .box .card .left .information .title{
  font-weight: bold;
  font-size: 36rpx;
}
.list .li .box .card .left .information .star{
  margin-top: -30rpx;
}
.list .li .box .card .left .information .star text{
  display: inline-block;
}
.list .li .box .card .left .information .classify{
  font-size: 28rpx;
  color: #9b9b9b;
  margin-top: 10rpx;
}
.list .li .box .card .right{
  flex: 2;
  border-left: 1px dashed #ccc;
}
.list .li .box .card .right .btn{
  width: 100%;
  text-align: center;
  display: inline-block;
  vertical-align: middle;
  position: relative;
  top: 30%;
}
.list .li .box .card .right .btn mp-icon{
  display: block;
}
.list .li .box .card .right .btn text{
  color: #FFA500;
  font-size: 28rpx;
}