/* pages/tables/tables.wxss */
.main{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
}
.main .ul{
  width: 100%;
  /* text-align: center; */
}
.main .ul .li{
  display: inline-block;
  width: 33%;
  text-align: center;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.main .ul .li .box{
  width: 100%;
}
.main .ul .li .box image{
  width: 100%;
  height: 250rpx;
  border-radius: 5px;
}
.main .ul .li .box .title{
  font-size: 24rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-weight: normal;
}
.main .ul .li .box .star{
  margin-top: -10px;
}